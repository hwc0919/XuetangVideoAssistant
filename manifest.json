{
    "name": "Xuetang Video Assistant",
    "version": "1.0",
    "description": "Improve your learning experience at https://next.xuetangx.com/ @Tsinghua",
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "80": "images/logo.png"
        }
    },
    "icons": {
        "80": "images/logo.png"
    },
    "manifest_version": 2
}